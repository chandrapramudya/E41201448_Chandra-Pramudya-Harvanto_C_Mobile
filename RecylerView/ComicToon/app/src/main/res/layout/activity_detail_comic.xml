<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DetailComicActivity">
//Menampilkan detail dari komik
    <TextView
        android:id="@+id/comicTitle"
        android:text="Title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/comicRating"
        android:layout_toRightOf="@id/comicTitle"
        android:text="9.0"
        android:layout_marginLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/comicReleaseDate"
        android:text="Tanggal rilis"
        android:layout_below="@id/comicTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/separator"
        android:text="|"
        android:layout_below="@+id/comicTitle"
        android:layout_toRightOf="@id/comicReleaseDate"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/comicGenre"
        android:layout_toRightOf="@id/separator"
        android:layout_below="@+id/comicTitle"
        android:text="Genre : Adventure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/comicPenulis"
        android:text="Nama Penulis"
        android:layout_below="@id/comicReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/comicSinopsis"
        android:text="Sinopsis Komik"
        android:layout_marginTop="5dp"
        android:layout_below="@id/comicPenulis"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>